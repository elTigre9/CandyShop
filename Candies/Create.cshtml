@page
@model CandyShop.Pages.Candies.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Candy</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Candy.Name" class="control-label"></label>
                <input asp-for="Candy.Name" class="form-control" />
                <span asp-validation-for="Candy.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candy.Type" class="control-label"></label>
                <input asp-for="Candy.Type" class="form-control" />
                <span asp-validation-for="Candy.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candy.Manufacturers.Name" class="control-label"></label>
                <select asp-for="Candy.Manufacturers.Name" class ="form-control" asp-items="ViewBag.MID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Candy.Stores.Name" class="control-label"></label>
                <select asp-for="Candy.Stores.Name" class ="form-control" asp-items="ViewBag.StoreId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
