@page
@model CandyShop.Pages.Candies.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Candy[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candy[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candy[0].Manufacturers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candy[0].Stores)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Candy) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacturers.MID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stores.StoreId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.CandyId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.CandyId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.CandyId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
